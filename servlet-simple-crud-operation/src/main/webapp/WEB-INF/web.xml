<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<welcome-file-list>
		<welcome-file> student-register.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- configuration for register -->
	<servlet>
		<servlet-class>com.jsp.servlet_simple_crud_operation.controller.InsertStudentController</servlet-class>
		<servlet-name>register</servlet-name>
	</servlet>

	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/submited</url-pattern>
	</servlet-mapping>
	
	<!-- configuration for login -->
	<servlet>
		<servlet-class>com.jsp.servlet_simple_crud_operation.controller.LoginStudentController </servlet-class>
		<servlet-name>login</servlet-name>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/loginStudent</url-pattern>
	</servlet-mapping>
	
	
	
	
	
</web-app>
